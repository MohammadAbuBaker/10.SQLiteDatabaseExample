<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.baker.sqlitedatabaseexample.MainActivity">

    <EditText
        android:id="@+id/movieNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie name"/>

    <EditText
        android:id="@+id/movieYearET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie year"/>
   <Button
       android:id="@+id/addBtn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Add Movie"
       android:textAllCaps="false"
       android:onClick="addMovie"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Movie List"
        android:textAllCaps="false"
        android:onClick="viewMovie"/>

</LinearLayout>
